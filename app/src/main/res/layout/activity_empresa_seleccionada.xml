<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".EmpresaSeleccionadaActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_gravity="left"
            app:srcCompat="@drawable/inicio" />
        <TextView
            android:id="@+id/lblNombreEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa"
            android:layout_marginStart="60px"
            android:layout_marginTop="50px"
            android:textSize="30px"
            android:textStyle="bold"
            android:textColor="#fff"
            >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/lblInformacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información"
        android:layout_marginTop="50px"
        android:textSize="25px"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblTeleefonoEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono"
        android:layout_marginTop="50px"
        android:textSize="20px"/>

    <TextView
        android:id="@+id/lblCorreoEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Electrónico"
        android:layout_marginTop="35px"
        android:textSize="20px"/>


    <TextView
        android:id="@+id/lblServicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicios"
        android:layout_marginTop="50px"
        android:textSize="25px"
        android:textStyle="bold"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnVerServicios"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Agregar Servicio"
        android:textColor="#fff"
        android:layout_marginTop="30px"
        android:layout_marginBottom="45px"
        app:backgroundTint="@color/colorPrimary" />

</LinearLayout>

</ScrollView>