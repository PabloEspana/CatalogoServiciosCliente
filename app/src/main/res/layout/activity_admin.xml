<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_gravity="left"
                app:srcCompat="@drawable/inicio" />
            <TextView
                android:id="@+id/lblNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="usuario"
                android:layout_marginStart="60px"
                android:layout_marginTop="50px"
                android:textSize="30px"
                android:textStyle="bold"
                android:textColor="#fff"
                >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/lblInfContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información de Contacto"
            android:layout_marginTop="50px"
            android:textSize="25px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblTeleefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:layout_marginTop="50px"
            android:textSize="20px"/>

        <TextView
            android:id="@+id/lblCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electrónico"
            android:layout_marginTop="35px"
            android:textSize="20px"/>


        <TextView
            android:id="@+id/lblEmpresas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresas o Instituciones"
            android:layout_marginTop="50px"
            android:textSize="25px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginTop="35px"
            android:textSize="20px"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnIrARegEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:text="Registrar Empresa"
            android:textColor="#fff"
            android:layout_marginTop="30px"
            android:layout_marginBottom="45px"
            app:backgroundTint="@color/colorPrimary" />

    </LinearLayout>

</ScrollView>